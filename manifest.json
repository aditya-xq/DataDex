{
    "manifest_version": 3,
    "name": "DataDex",
    "version": "1.0.0",
    "description": "A browser extension to help content creators with research and data aggregation.",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "webNavigation",
      "https://*/*"
    ],
    "web_accessible_resources": [
      "styles.css"
    ]
}